#:kivy 2.1.0

<Multicampo_menu>:
    canvas.before:
        Color:
            rgba: (.05, 0.5, .9, .8) if self.selected else (.5, .5, .5, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    orientation: 'horizontal'
    label_1: ''
    label_2: ''
    BoxLayout:
        orientation: 'horizontal'
        Label:
            text: root.label_1
        Label:
            text: root.label_2

<Nuovo_menu>:
    rv_primi: rv_primi
    rv_secondi: rv_secondi
    rv_contorni: rv_contorni
    BoxLayout:
        TabbedPanel:
            do_default_tab: False
            TabbedPanelItem:
                text: 'Primi'
                GridLayout:
                    canvas.before:
                        Color:
                            rgba: (.5, .5, .5, .5)
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    cols: 1
                    rows: 1
                    size_hint_y: 0.90
                    RecycleView:
                        id:rv_primi
                        viewclass: 'Multicampo_menu'
                        SelectableRecycleBoxLayout:
                            default_size: None, dp(40)
                            default_size_hint: 1, None
                            size_hint_y: None
                            height: self.minimum_height
                            orientation: 'vertical'
                            multiselect: True
                            touch_multiselect: True
            TabbedPanelItem:
                text: 'Secondi'
                GridLayout:
                    canvas.before:
                        Color:
                            rgba: (.5, .5, .5, .5)
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    cols: 1
                    rows: 1
                    size_hint_y: 0.90
                    RecycleView:
                        id:rv_secondi
                        viewclass: 'Multicampo_menu'
                        SelectableRecycleBoxLayout:
                            default_size: None, dp(40)
                            default_size_hint: 1, None
                            size_hint_y: None
                            height: self.minimum_height
                            orientation: 'vertical'
                            multiselect: True
                            touch_multiselect: True
            TabbedPanelItem:
                text: 'Contorni'
                GridLayout:
                    canvas.before:
                        Color:
                            rgba: (.5, .5, .5, .5)
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    cols: 1
                    rows: 1
                    size_hint_y: 0.90
                    RecycleView:
                        id:rv_contorni
                        viewclass: 'Multicampo_menu'
                        SelectableRecycleBoxLayout:
                            default_size: None, dp(40)
                            default_size_hint: 1, None
                            size_hint_y: None
                            height: self.minimum_height
                            orientation: 'vertical'
                            multiselect: True
                            touch_multiselect: True
            TabbedPanelItem:
                text: 'Riepilogo'
    BoxLayout:
        Button:
            text: 'Indietro'
            size_hint: 1, 0.1
            on_press: root.indietro()
