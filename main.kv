#:include ingresso_merce.kv

<menu>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 211,211,211,1
            Rectangle:
                pos: self.pos
                size: self.size
        GridLayout:
            rows: 1
            size_hint: 1,.5
            Button:
                text: 'Ingresso Merce'
                on_press: root.ingresso_merce()
            Button:
                text: 'Nuovo Lotto'
            Button:
                text: 'Chiudi Lotti'
            Button:
                text: 'Vendita'
            Button:
                text: 'Esci'
                on_press: root.esci()
        Image:
            source: '.\\immagini\\dlogo.gif'
