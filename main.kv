#:import lv kivy.uix.listview
#:import la kivy.adapters.listadapter

<Tastiera@GridLayout>:
    cols: 3
    Button:
        text: '1'
    Button:
        text: '2'
    Button:
        text: '3'
    Button:
        text: '4'
    Button:
        text: '5'
    Button:
        text: '6'
    Button:
        text: '7'
    Button:
        text: '8'
    Button:
        text: '9'
    Button:
        text: '0'
    Button:
        text: ','
    Button:
        text: 'Canc'
<menu>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 211,211,211,1
            Rectangle:
                pos: self.pos
                size: self.size
        GridLayout:
            rows: 1
            size_hint: 1,.5
            Button:
                text: 'Ingresso Merce'
                on_press: root.ingresso_merce()
            Button:
                text: 'Nuovo Lotto'
            Button:
                text: 'Chiudi Lotti'
            Button:
                text: 'Vendita'
            Button:
                text: 'Esci'
                on_press: root.esci()
        Image:
            source: '.\\immagini\\dlogo.gif'

<IngressoMerce>:
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'horizontal'
            canvas.before:
                Color:
                    rgba: 255,255,255,1
                Rectangle:
                    pos: self.pos
                    size: self.size
            ListView:
                adapter:
                    la.ListAdapter(
                    data=root.lista_tagli,
                    selection_mode='single',
                    allow_empty_selection=False,
                    cls=lv.ListItemButton)
            ListView:
                adapter:
                    la.ListAdapter(
                    data=root.lista_fornitori,
                    selection_mode='single',
                    allow_empty_selection=False,
                    cls=lv.ListItemButton)
        BoxLayout:
            canvas.before:
                Color:
                    rgba: 211,211,211,.7
                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: 'vertical'
            size_hint: .5,1
            Label:
                canvas.before:
                    Color:
                        rgba: 0,0,1,1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                text: 'Progressivo Lotto'
            Label:
                text: str(root.prog_lotto_acq)
            Label:
                text: 'Data ingresso merce'
            Label:
                text: str(root.data.strftime('%d/%m/%y'))
            Label:
                text: 'Numero ddt/Fattura'
            TextInput:
                size_hint: 1,.3
            Tastiera:
            Button:
                text: 'indietro'
                size_hint: 1,.3
                on_press: root.indietro()
