#:kivy 2.1.0
#:include lotti_vendita.kv
#:include chiudi_lotto.kv
#:include nuovo_menu.kv
<menu>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 211,211,211,1
            Rectangle:
                pos: self.pos
                size: self.size
        GridLayout:
            rows: 2
            cols: 5
            size_hint: 1,.5
            Button:
                text: 'Ingresso Merce'
                on_press: root.ingresso_merce()
            Button:
                text: 'Nuovo Lotto'
            Button:
                text: 'Chiudi Lotti'
                on_press: root.chiudi_lotto()
            Button:
                text: 'Vendita'
                on_press: root.lotti_vendita()
            Button:
                text: 'Impostazioni'
            Button:
                text: 'Nuovo Menu'
                on_press: root.nuovo_menu()
            Button:
                text: 'Esci'
                on_press: root.esci()
        Image:
            source: './/immagini//dlogo.png'
