#:kivy 2.1.0
#:import utils kivy.utils

<Multicampo>:
    orientation: 'horizontal'
    label_1: ''
    label_2: ''
    label_3: ''
    label_4: ''
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            canvas.before:
                Color:
                    rgba: (0, 1, .9, .8)
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                text: root.label_1
        GridLayout:
            cols:4
            Label:
                size_hint_x: 0.1
                text: root.label_2
            Label:
                size_hint_x: 0.1
                text: root.label_3
            Label:
                size_hint_x: 0.1
                text: root.label_4

<Chiudi_lotto>:
    canvas.before:
        Color:
            rgb: utils.get_color_from_hex('#BCBCBC')
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        cols: 1
        rows: 2
        size_hint_y: 0.9
        pos_hint:{'top':1}
        GridLayout:
            canvas.before:
                Color:
                    rgba: (.05, 0.5, .9, .8)
                Rectangle:
                    pos: self.pos
                    size: self.size
            cols: 4
            rows: 1
            size_hint_y: 0.1
            Label:
                size_hint_x: 0.1
                text: 'Fornitore'
            Label:
                size_hint_x: 0.1
                text: 'Articolo'
            Label:
                size_hint_x: 0.1
                text: 'Peso Residuo'
        GridLayout:
            canvas.before:
                Color:
                    rgba: (.5, .5, .5, .5)
                Rectangle:
                    pos: self.pos
                    size: self.size
            cols: 1
            rows: 1
            size_hint_y: 0.8
            RecycleView:
                id:rv
                viewclass: 'Multicampo'
                SelectableRecycleBoxLayout:
                    default_size: None, dp(40)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'
    BoxLayout:
        Button:
            text: 'Cancella Selezionati'
            size_hint: 0.5, 0.1
        Button:
            text: 'Indietro'
            size_hint: 0.5, 0.1
            on_press: root.indietro()
