#:import lv kivy.uix.listview
#:import la kivy.adapters.listadapter


<IngressoMerce>:
    BoxLayout:
        txtinp: txtinp
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'horizontal'
            canvas.before:
                Color:
                    rgba: 255,255,255,1
                Rectangle:
                    pos: self.pos
                    size: self.size
            ListView:
                adapter:
                    la.ListAdapter(
                    data=root.lista_tagli,
                    selection_mode='single',
                    allow_empty_selection=False,
                    cls=lv.ListItemButton)
            ListView:
                adapter:
                    la.ListAdapter(
                    data=root.lista_fornitori,
                    selection_mode='single',
                    allow_empty_selection=False,
                    cls=lv.ListItemButton)
        BoxLayout:
            canvas.before:
                Color:
                    rgba: 211,211,211,.7
                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: 'vertical'
            size_hint: .5,1
            Label:
                canvas.before:
                    Color:
                        rgba: 0,0,1,1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                text: 'Progressivo Lotto'
            Label:
                text: str(root.prog_lotto_acq)
            Label:
                canvas.before:
                    Color:
                        rgba: 0,0,1,1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                text: 'Data ingresso merce'
            Label:
                text: str(root.data.strftime('%d/%m/%y'))
            Label:
                text: 'Numero ddt/Fattura'
            TextInput:
                id: txtinp
                text: ''
            GridLayout:
                cols: 3
                Button:
                    id: btn1
                    text: '1'
                    on_press: txtinp.text = txtinp.text + self.text
                Button:
                    text: '2'
                    on_press: txtinp.text = txtinp.text + self.text
                Button:
                    text: '3'
                    on_press: txtinp.text = txtinp.text + self.text
                Button:
                    text: '4'
                    on_press: txtinp.text = txtinp.text + self.text
                Button:
                    text: '5'
                    on_press: txtinp.text = txtinp.text + self.text
                Button:
                    text: '6'
                    on_press: txtinp.text = txtinp.text + self.text
                Button:
                    text: '7'
                    on_press: txtinp.text = txtinp.text + self.text
                Button:
                    text: '8'
                    on_press: txtinp.text = txtinp.text + self.text
                Button:
                    text: '9'
                    on_press: txtinp.text = txtinp.text + self.text
                Button:
                    text: ','
                    on_press: txtinp.text = txtinp.text + self.text
                Button:
                    text: 'canc'
                    on_press: txtinp.text = txtinp.text[:-1]
            Button:
                text: 'indietro'
                size_hint: 1,.3
                on_press: root.indietro()
