#:kivy 2.1.0
#:import utils kivy.utils

<Multicampo_riepilogo_ingresso_merce>:
    canvas.before:
        Color:
            rgba: (.05, 0.5, .9, .8) if self.selected else (.5, .5, .5, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    orientation: 'horizontal'
    label_1: ''
    label_2: ''
    BoxLayout:
        orientation: 'horizontal'
        Label:
            text: root.label_1
        Label:
            text: root.label_2


<SelectableLabel>:
    # Draw a background to indicate selection
    canvas.before:
        Color:
            rgb: utils.get_color_from_hex('#8fce00') if self.selected else utils.get_color_from_hex('#999999')
        Rectangle:
            pos: self.pos
            size: self.size

<MyLabel@Label>:
    color: utils.get_color_from_hex('#000000')

<Ingresso_merce>:
    canvas.before:
        Color:
            rgb: utils.get_color_from_hex('#BCBCBC')
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        size_hint: 1, 0.9
        pos_hint:{'top':1}
        TabbedPanel:
            do_default_tab: False
            TabbedPanelItem:
                text: 'Intestazione'
                GridLayout:
                    cols:2
                    canvas.before:
                        Color:
                            rgb: utils.get_color_from_hex('#F3F6F4')
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    MyLabel:
                        text:'DATA'
                    MyLabel:
                        id: label_data
                    MyLabel:
                        text: 'PROGRESSIVO INGRESSO'
                    MyLabel:
                        id: label_prog_ingresso
                    MyLabel:
                        text: 'FORNITORE'
                    Spinner:
                        id: spinner_fornitori
                    MyLabel:
                        text: 'NUMERO DOCUMENTO'
                    TextInput:
                        hint_text:' Inserisci numero \n documento qui'
                        multiline: False
                        font_size: 40
            TabbedPanelItem:
                text: 'Corpo \n Documento'
                BoxLayout:
                    orientation: 'horizontal'
                    canvas.before:
                        Color:
                            rgb: utils.get_color_from_hex('#F3F6F4')
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    BoxLayout:
                        orientation: 'vertical'
                        BoxLayout:
                            orientation: 'horizontal'
                            size_hint_y: .27
                            ToggleButton:
                                text:'AGNELLO'
                                group: 'merceologia'
                                size_hint: .1, None
                                pos_hint: {'top':1}
                                on_press: root._aggiorna_rv_lista_tagli('12')
                            ToggleButton:
                                text:'BOVINO'
                                group: 'merceologia'
                                size_hint: .1, None
                                pos_hint: {'top':1}
                                on_press: root._aggiorna_rv_lista_tagli('10')
                            ToggleButton:
                                text:'VITELLO'
                                group: 'merceologia'
                                size_hint: .1, None
                                pos_hint: {'top':1}
                                on_press: root._aggiorna_rv_lista_tagli('13')
                            ToggleButton:
                                text:'SUINO'
                                group: 'merceologia'
                                size_hint: .1, None
                                pos_hint: {'top':1}
                                on_press: root._aggiorna_rv_lista_tagli('11')
                        BoxLayout:
                            canvas.before:
                                Color:
                                    rgb: utils.get_color_from_hex('#999999')
                                Rectangle:
                                    pos: self.pos
                                    size: self.size
                            RecycleView:
                                id: rv_articoli
                                viewclass: 'SelectableLabel'
                                SelectableRecycleBoxLayout:
                                    default_size: None, dp(56)
                                    default_size_hint: 1, None
                                    size_hint_y: None
                                    height: self.minimum_height
                                    orientation: 'vertical'
                    BoxLayout:
                        orientation: 'vertical'
                        Label:
                            text:'QUANTITA RICEVUTA'
                            color: utils.get_color_from_hex('#999999')
                            size_hint: 1 ,.1
                        TextInput:
                            hint_text: 'Kgs'
                            font_size: 40
                            size_hint_y: .3
                            input_filter: 'float'
                            multiline: False
                            write_tab: False
                        Label:
                            text: 'Articoli inseriti '+ root._conta_articoli_inseriti(rv_riepilogo_ingresso_merce.data)
                            color: utils.get_color_from_hex('#999999')
                            size_hint_y: .3
                        Button:
                            text:'CONFERMA'
                            on_press: root._selezione()
            TabbedPanelItem:
                text: 'Riepilogo'
                GridLayout:
                    cols: 1
                    rows: 2
                    GridLayout:
                        canvas.before:
                            Color:
                                rgb: utils.get_color_from_hex('#5B5B5B')
                            Rectangle:
                                pos: self.pos
                                size: self.size
                        cols: 2
                        rows: 1
                        size_hint_y: 0.1
                        Label:
                            size_hint_x: 0.1
                            text: 'ARTICOLO'
                        Label:
                            size_hint_x: 0.1
                            text: 'MERCEOLOGIA'
                    GridLayout:
                        canvas.before:
                            Color:
                                rgb: utils.get_color_from_hex('#999999')
                            Rectangle:
                                pos: self.pos
                                size: self.size
                        cols: 1
                        rows: 1
                        RecycleView:
                            id:rv_riepilogo_ingresso_merce
                            viewclass: 'Multicampo_riepilogo_ingresso_merce'
                            SelectableRecycleBoxLayout:
                                default_size: None, dp(40)
                                default_size_hint: 1, None
                                size_hint_y: None
                                height: self.minimum_height
                                orientation: 'vertical'
    BoxLayout:
        size_hint: 1, 0.1
        Button:
            text:'Indietro'
            on_press: root.indietro()
